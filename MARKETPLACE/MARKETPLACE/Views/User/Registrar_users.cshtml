@model MARKETPLACE.Entity.Uxsers

@{
    ViewBag.Title = "Registrar_users";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<head>
    @Styles.Render("~/Content/CSS004")
</head>
<aside class="aside">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <h2>Registrar</h2>
            <div class="col">

                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "t1", Type = "text", placeholder = "Nombre usuario" } })
                @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.apellido, new { htmlAttributes = new { @class = "t1", Type = "text", placeholder = "Apellido usuario" } })
                @Html.ValidationMessageFor(m => m.apellido, "", new { @class = "text-danger" })

                @Html.DropDownList("idpais", (SelectList)ViewBag.pais, new { @class = "t1", placeholder = "Pais" })

                @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "t1", Type = "text", placeholder = "Usuario" } })

                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "t1", placeholder = "Email" } })

                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "t1", placeholder = "Contraseña", type = "password" } })

                <input type="submit" value="Create" class="btnRegistrar" />

            </div>
        </div>
    }
</aside>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}