<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("head", required: false)
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css000")
</head>
<body>
    @{
        if (!string.IsNullOrEmpty(ViewBag.User))
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("marketplace", "User", "User", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div>
                        <label style="float:right;margin-top:24px;margin-left:10px;">@Html.ActionLink("Salir", "Close", "User")</label>
                        <h4 style="color:white;float:right;margin-top:24px;"> @ViewBag.User</h4>
                    </div>



                </div>
            </div>



            @*<div class="head">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Salir", "Close", "User")</li>
                    </ul>
                    <h2>Bienvenido: @ViewBag.User</h2>
                </div>*@
        }
    }
    <div>
        @RenderBody()
    </div>
    <footer>
        <center>
            <p></p>
        </center>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

