@model MARKETPLACE.Entity.Producto

@{
    ViewBag.Title = "Registrar_Producto";
}


<h2>Registrar</h2>

@using (Html.BeginForm("Registrar_Producto", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <h2>Registrar</h2>
        <div class="col">

            @Html.DropDownList("idmarca", (SelectList)ViewBag.idmarca, new { @class = "t1", placeholder = "Marca" })

            @Html.DropDownList("idcategoria", (SelectList)ViewBag.idcategoria, new { @class = "t1", placeholder = "Categoria" })

            @Html.EditorFor(model => model.nombre_producto, new { htmlAttributes = new { @class = "t1", Type = "text", placeholder = "nombre" } })

            <div>
                @Html.LabelFor(model => model.img_producto, htmlAttributes: new { @class = "t1" })
                <input type="file" name="img_producto" />
            </div>

            @Html.EditorFor(model => model.preciof_producto, new { htmlAttributes = new { @class = "t1", placeholder = "Precio" } })

            @Html.EditorFor(model => model.desc_producto, new { htmlAttributes = new { @class = "t1", placeholder = "descripcion", type = "text" } })

            <input type="submit" value="Create" class="btnRegistrar" />

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Listado_producto")
</div>